<Window x:Class="WpfBattleship.MultiName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBattleship"
        mc:Ignorable="d"
        Title="MultiName" Height="400" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Enter player1 name:" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,46,0,0"/>
        <TextBox Grid.Row="1" Name="player1Name" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="8" Width="150"/>
        <TextBlock Grid.Row="2" Text="Enter player2 name:" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,45,0,0"/>
        <TextBox Grid.Row="3" Name="player2Name" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="8" Width="150" />
        <Button Grid.Row="4" Name="ok" Content="OK" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="15" Click="OpenMultiplayer" Width="60" />
    </Grid>
</Window>
