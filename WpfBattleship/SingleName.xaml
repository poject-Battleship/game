<Window x:Class="WpfBattleship.SingleName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBattleship"
        mc:Ignorable="d"
        Title="SingleName" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Enter your player name:" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"/>
        <TextBox Grid.Row="1" Name="playerName" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="8" Width="150"/>
        <Button Grid.Row="2" Name="ok" Content="OK" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,26,0,0" Click="OpenSingleplayer" Width="60" />
    </Grid>
</Window>
